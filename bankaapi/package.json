{
  "name": "bankaapi",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "node_modules/.bin/nodemon app.js --exec babel-node --",
    "dev-start": "nodemon --exec babel-node app.js",
    "start:server": "babel-watch app.js",
    "test": "mocha",
    "cover": "istanbul cover _mocha",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "build:clean": "npm run test:clean ** rimraf ./build",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover --report lcov --report json --report text --report html _mocha -- --ui bdd --reporter spec --colors --compilers js:babel-core/register server/tests --recursive"
  },
  "author": "Rasheed",
  "license": "ISC",
  "description": "a minimalist banking app",
  "dependencies": {
    "chai-http": "^4.2.1",
    "express": "^4.16.4",
    "express-validator": "^5.3.1"
  },
  "devDependencies": {
    "chai": "^4.2.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "istanbul": "^0.4.5",
    "mocha": "^6.1.3",
    "nodemon": "^1.18.11"
  }
}
