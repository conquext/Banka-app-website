{
  "name": "bankaapi",
  "version": "1.0.0",
  "main": "app.js",
  "scripts": {
    "start": "npm run build && nodemon dist/app.js",
    "build": "babel app.js -d dist",
    "serve": "node dist/app.js",
    "dev-start": "nodemon --exec babel-node app.js",
    "lint": "eslint '**/*.js' ",
    "start:server": "babel-watch app.js",
    "test": "mocha --require babel-core/register",
    "cover": "istanbul cover _mocha ",
    "coveralls": "npm run cover -- --report lcovonly && cat ./coverage/lcov.info | coveralls",
    "build:clean": "npm run test:clean ** rimraf ./build",
    "test:coverage": "cross-env NODE_ENV=test ./node_modules/.bin/istanbul cover --report lcov --report json --report text --report html _mocha -- --ui bdd --reporter spec --colors --require babel-core/register test --recursive",
    "test-coveralls": "istanbul cover ./node_modules/mocha/bin/_mocha --report lcovonly -- -R spec --require babel-core/register && cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js && rm -rf ./coverage"
  },
  "author": "Rasheed",
  "license": "ISC",
  "description": "a minimalist banking app",
  "dependencies": {
    "@types/express": "^4.16.1",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "body-parser": "^1.18.3",
    "chai-http": "^4.2.1",
    "cordova": "^9.0.0",
    "dotenv": "^7.0.0",
    "esm": "^3.2.22",
    "express": "^4.16.4",
    "express-validator": "^5.3.1",
    "jsonwebtoken": "^8.5.1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/conquext/conquext.github.io.git"
  },
  "bugs": {
    "url": "https://github.com/conquext/conquext.github.io/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.4.3",
    "@types/body-parser": "^1.17.0",
    "@types/chai-http": "^4.2.0",
    "babel-preset-env": "^1.7.0",
    "babel-register": "^6.26.0",
    "chai": "^4.2.0",
    "coveralls": "^3.0.3",
    "cross-env": "^5.2.0",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "istanbul": "^1.0.0-alpha.2",
    "mocha": "^6.1.3",
    "nodemon": "^1.18.11"
  }
}
